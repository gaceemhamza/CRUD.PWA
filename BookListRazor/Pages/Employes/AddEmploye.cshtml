@page
@model ProjectPWA.Pages.Employes.AddEmployeModel


<link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<div class="container" style="margin-top:5em;">
    <div class="row" style="background-color:aliceblue">
        <div class="col-md-6 col-md-offset-3">

            <div class="well well-sm">
                <h2 style=" color: #1e3e7b; margin-left:8em;">Add Employe</h2>
                <form class="form-horizontal" action="" method="post">
                    <fieldset>
                        <div calss="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="Employe.FirstName"></label>
                            <div class="col-md-9">
                                <input asp-for="Employe.FirstName" class="form-control">
                            </div>
                            <span asp-validation-for="Employe.FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="Employe.LastName"></label>
                            <div class="col-md-9">
                                <input asp-for="Employe.LastName" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="Employe.Email"> </label>
                            <div class="col-md-9">
                                <input asp-for="Employe.Email" class="form-control">
                                <span asp-validation-for="Employe.Email" class="text-danger"></span>
                            </div>
                            <span asp-validation-for="Employe.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="Employe.Phone"></label>
                            <div class="col-md-9">
                                <input asp-for="Employe.Phone" class="form-control">
                            </div>
                            <span asp-validation-for="Employe.Phone" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="Employe.Adresse"></label>
                            <div class="col-md-9">
                                <input asp-for="Employe.Adresse" class="form-control">
                            </div>
                            <span asp-validation-for="Employe.Adresse" class="text-danger"></span>
                        </div>


                        <div class="row">
                            <div class="col-sm" style="margin-left:6em;">
                                <a asp-page="Index" class="btn btn-primary btn-lg" >Back To List</a>

                            </div>
                            <div class="col-sm">

                            </div>
                            <div class="col-sm">
                                <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>


